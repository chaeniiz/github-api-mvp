<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.detail.DetailActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/avatarImageView"
            tools:text="Song Chae Yun"/>

        <TextView
            android:id="@+id/nickTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#666666"
            app:layout_constraintTop_toBottomOf="@id/nameTextView"
            tools:text="chaeniiz"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#cccccc"
            app:layout_constraintTop_toBottomOf="@id/nickTextView"
        />

        <TextView
            android:id="@+id/bioTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/divider"
            tools:text="I L❤️VE ANDROID!"/>

        <ImageView
            android:id="@+id/companyImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_people"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/bioTextView"/>

        <TextView
            android:id="@+id/companyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/companyImageView"
            app:layout_constraintBottom_toBottomOf="@id/companyImageView"
            app:layout_constraintStart_toEndOf="@id/companyImageView"
            tools:text="Rainist"/>

        <ImageView
            android:id="@+id/locationImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/companyImageView"/>

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/locationImageView"
            app:layout_constraintBottom_toBottomOf="@id/locationImageView"
            app:layout_constraintStart_toEndOf="@id/locationImageView"
            tools:text="Seoul, Korea"/>

        <ImageView
            android:id="@+id/recentActivityImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_computer"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/locationImageView"/>

        <TextView
            android:id="@+id/recentActivityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/recentActivityImageView"
            app:layout_constraintBottom_toBottomOf="@id/recentActivityImageView"
            app:layout_constraintStart_toEndOf="@id/recentActivityImageView"
            tools:text="2019. 4. 7 (recent activity)"/>

    </android.support.constraint.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</FrameLayout>
